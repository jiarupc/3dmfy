<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dmfy.Dao.DesignerDao">
    <!-- 为Dao提供sql配置 -->
    <select id="selectDesigners" resultType="Designer">
        select ID, name, picPath
        from designer
    </select>

    <insert id="insertDesigner">
        insert into designer(name, picPath)
        values(#{name}, #{picPath})
    </insert>

    <delete id="deleteDesigner">
        delete from designer
        where ID = #{ID}
    </delete>

    <update id="updateDesigner">
        update designer
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="picPath != null">picPath = #{picPath}</if>
        </set>
        where ID = #{ID}
    </update>
</mapper>